<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:stretchColumns="1">

    <TableRow android:layout_weight="1">

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:background="#64d8cb"
            android:orientation="vertical">

            <ImageView
                android:layout_width="145dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:src="@drawable/settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/text_settings"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:background="#338a3e"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/text_profile"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </TableRow>


    <TableRow android:layout_weight="1">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="#005b9f"
            android:orientation="vertical">

            <ImageView
                android:layout_width="145dp"
                android:layout_height="116dp"
                android:layout_gravity="center"
                android:src="@drawable/folder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/text_favorites"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="#d05ce3"
            android:orientation="vertical">

            <ImageView
                android:layout_width="134dp"
                android:layout_height="117dp"
                android:layout_gravity="center"
                android:src="@drawable/ingresos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/text_income"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

    </TableRow>


    <TableRow android:layout_weight="1">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="#ff8a80"
            android:orientation="vertical">

            <ImageView
                android:layout_width="132dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:src="@drawable/calculator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/text_budget"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="#c51162"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:src="@drawable/egreso" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/text_outcome"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

    </TableRow>


</TableLayout>
